<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.ac.aut.ceit.pervasive.fantastic"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ir.ac.aut.ceit.pervasive.fantastic.SensorListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ir.ac.aut.ceit.pervasive.fantastic.SensorDetailActivity"
            android:label="@string/title_sensor_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SensorListActivity" />
        </activity>
    </application>

</manifest>
